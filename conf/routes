# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Swagger API
GET         /swagger.json                                                   controllers.ApiHelpController.getResources
GET         /docs                                                           controllers.HomeController.redirectDocs


# An example controller showing a sample home page
GET         /                                                               controllers.HomeController.redirectDocs

POST        /api/auth/signin                                                controllers.AuthController.authenticate
POST        /api/auth/signup                                                controllers.AuthController.signUp
POST        /api/auth/change-password                                       controllers.AuthController.changePassword
POST        /api/auth/change-user-password                                  controllers.AuthController.changeUserPassword
GET         /api/auth/logout                                                controllers.AuthController.logout
GET         /api/auth/user                                                  controllers.AuthController.getUser


# _TODO_ routes
GET         /api/v1/todo/get/:id                                            controllers.SampleController.getTodo(id)
GET         /api/v1/todo/all                                                controllers.SampleController.getTodos
PUT         /api/v1/todo/save                                               controllers.SampleController.addTodo
POST        /api/v1/todo/update                                             controllers.SampleController.updateTodo
DELETE      /api/v1/todo/delete/:id                                         controllers.SampleController.deleteTodo(id)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                                   controllers.Assets.versioned(path="/public", file: Asset)